@model ProvaWeb1.Models.Filme

<h2>Excluir Filme</h2>

<div>
    <h4>Tem certeza que deseja excluir este filme?</h4>
    <p><b>Título:</b> @Model.Titulo</p>
    <p><b>Diretor:</b> @Model.Diretor</p>
    <p><b>Ano de Lançamento:</b> @Model.AnoLancamento</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>