@model ProvaWeb1.Models.Filme

<h2>Editar Filme</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Título</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Diretor</label>
        <input asp-for="Diretor" class="form-control" />
        <span asp-validation-for="Diretor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Ano de Lançamento</label>
        <input asp-for="AnoLancamento" class="form-control" />
        <span asp-validation-for="AnoLancamento" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>